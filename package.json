{
  "name": "@mudano/ui-react",
  "version": "0.0.1",
  "description": "Mudano UI React components",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mudano/ui-react.git"
  },
  "author": "Mudano Ltd. (http://mudano.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mudano/ui-react/issues"
  },
  "homepage": "https://github.com/Mudano/ui-react#readme",
  "scripts": {
    "start": "yarn storybook:watch",
    "build": "npm-run-all -s library:clean library:build",
    "library:clean": "rm -rf ./dist",
    "library:build": "yarn lint && NODE_ENV=production babel ./src --out-dir ./dist --copy-files --ignore *.scss,*.story.js,*.test*.js",
    "storybook:clean": "rm -rf ./storybook-static",
    "storybook:build": "yarn lint && build-storybook",
    "storybook:watch": "start-storybook -p 6006",
    "lint": "npm-run-all -s lint:scss lint:js",
    "lint:scss": "stylelint 'src/**/*.scss'",
    "lint:scss-fix": "yarn lint:scss --fix",
    "lint:js": "eslint ./src --cache",
    "lint:js-fix": "yarn lint:js --fix",
    "test": "npm-run-all -s test:unit test:int",
    "test:unit": "jest",
    "test:unit-watch": "jest --watch",
    "test:int": "codeceptjs run",
    "test:int-setup": "./test/codecept/setup",
    "selenium": "selenium-standalone"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/test/jest/__mocks__/styleMock.js"
    },
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "setupFiles": [
      "./test/jest/setupEnvironment.js"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-react-docgen": "^1.8.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "codeceptjs-webdriverio": "^1.1.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "enzyme-to-json": "^3.2.2",
    "eslint": "^4.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "7.4.0",
    "jest": "^21.2.1",
    "jest-enzyme": "^4.0.1",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "react": ">=0.14.0 <= 15",
    "react-dom": ">=0.14.0 <= 15",
    "react-test-renderer": "<= 15",
    "sass-loader": "^6.0.6",
    "selenium-standalone": "^6.12.0",
    "stylelint": "^8.3.1",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^2.2.0",
    "stylelint-webpack-plugin": "^0.9.0"
  },
  "peerDependencies": {
    "node-sass": "^4.7.2",
    "prop-types": "15.6.0",
    "react": ">=0.14.0 <= 15",
    "react-dom": ">=0.14.0 <= 15",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "@storybook/addon-actions": "^3.2.17",
    "@storybook/addon-info": "^3.2.17",
    "@storybook/addon-knobs": "^3.2.17",
    "@storybook/addon-links": "^3.2.17",
    "@storybook/addon-options": "^3.2.17",
    "@storybook/react": "^3.2.17",
    "classnames": "^2.2.5"
  }
}
